<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
  <springProfile name="default|local">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
        <charset>UTF-8</charset>
        <Pattern>
          <![CDATA[
                    %cyan(%d{HH:mm:ss})[%highlight(%-5level)] [%thread] %class{40}.%M %L : %msg%n
                    ]]>
        </Pattern>
      </encoder>
    </appender>

    <logger name="org.springframework" level="info" />
    <logger name="io.r2dbc.spi" level="debug" />
    <logger name="io.r2dbc.mysql" level="debug" />

    <logger name="com.netflix.eureka" level="OFF" />

    <root level="info">
      <appender-ref ref="STDOUT"/>
    </root>
  </springProfile>

  <springProfile name="prod">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}[%-5level] %class{20}.%M %L  : %msg%n</pattern>
      </encoder>
    </appender>
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
        <level>INFO</level>
      </filter>
      <file>applog.txt</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <fileNamePattern>applog-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>
        <timeBasedFileNamingAndTriggeringPolicy
          class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
          <maxFileSize>100MB</maxFileSize>
        </timeBasedFileNamingAndTriggeringPolicy>
      </rollingPolicy>
      <encoder>
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}[%-5level] %class{20}.%M %L  : %msg%n</pattern>
      </encoder>
    </appender>

    <logger name="com.netflix.eureka" level="OFF" />

    <root level="debug">
      <appender-ref ref="STDOUT"/>
      <appender-ref ref="ROLLING"/>
    </root>
  </springProfile>
</configuration>
